{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignore": [
			"node_modules/**",
			"tmp/**",
			".build-test/**",
			"opentui/**",
			"opentui-examples/**",
			"codex/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 110
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "off",
				"noExplicitAny": "off"
			},
			"correctness": {
				"noUnnecessaryContinue": "off",
				"useExhaustiveDependencies": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noUselessTernary": "off",
				"useOptionalChain": "off"
			},
			"style": {
				"noInferrableTypes": "off",
				"noNonNullAssertion": "off",
				"noUnusedTemplateLiteral": "off",
				"useSelfClosingElements": "off",
				"useConst": "off",
				"useExponentiationOperator": "off",
				"useImportType": "off",
				"useNodejsImportProtocol": "off",
				"useNumberNamespace": "off",
				"useTemplate": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "es5",
			"semicolons": "always"
		}
	}
}
